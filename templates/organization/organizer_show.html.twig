{% extends 'base.html.twig' %}

{% block title %}Organization{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="mt-5 d-flex">
                    <div class="me-3">
                        <img src="{{ asset('images/card.png') }}" alt="" width="120" height="120" class="rounded-2">
                    </div>
                    <div>
                        <p class="fs-2">{{ organization.name }}</p>
                        <p>{{ organization.email }}</p>
                    </div>
                </div>

                <hr class="mt-4 mb-4">

                <p class="text-center">{{ organization.description }}</p>

                {% if musicians is not empty %}
                    <h2 class="mt-5">Sus m√∫sicos</h2>
                    <ul>
                        {% for musician in musicians %}
                            <li>{{ musician.musician.name }} - {{ musician.musician.instrument.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}

                {% if events is not empty %}
                    <div class="d-flex justify-content-between align-content-center mt-5">
                        <h2>Eventos relacionados</h2>
                        <a href="{{ path('app_organization_event_new', {'organizationId': organization.id}) }}">
                            <button class="btn btn-primary">Crear evento</button>
                        </a>
                    </div>

                    <div class="d-flex flex-wrap justify-content-center justify-content-md-center justify-content-lg-between justify-content-xl-between">
                        {% for event in events %}
                            <div class="card card-2 mt-2 mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="p-3">
                                            <img src="{{ asset('images/card.png') }}" class="rounded-2" alt="...">
                                        </div>
                                        <div>
                                            <p class="card-title ff-2 fs-4 pe-3">{{ event.name }}</p>
                                        </div>
                                    </div>
                                    <div class="card-body pt-0">
                                        <p class="card-text">
                                            {% if event.description|length > 75 %}
                                                {{ event.description|slice(0, 75) ~ '...' }}
                                            {% else %}
                                                {{ event.description }}
                                            {% endif %}
                                        </p>
                                        <p class="card-text ff-2 d-flex align-items-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                 fill="currentColor"
                                                 class="bi bi-geo-alt" viewBox="0 0 16 16">
                                                <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                                                <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                            </svg>
                                            {{ event.location }}
                                        </p>
                                    </div>
                                <div class="card-footer p-0">
                                    <div class="text-center">
                                        <a href="{{ path('app_event_edit', {'id': event.id}) }}">
                                            <button type="button" class="w-100 rounded-bottom button-3">Editar</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
