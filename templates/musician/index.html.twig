{% extends 'base.html.twig' %}

{% block title %}Musician index{% endblock %}

{% block body %}
    <h1>Musician index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Username</th>
                <th>Email</th>
                <th>Image</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for musician in musicians %}
            <tr>
                <td>{{ musician.id }}</td>
                <td>{{ musician.name }}</td>
                <td>{{ musician.lastname }}</td>
                <td>{{ musician.username }}</td>
                <td>{{ musician.email }}</td>
                <td>{{ musician.image }}</td>
                <td>{{ musician.password }}</td>
                <td>
                    <a href="{{ path('app_musician_show', {'id': musician.id}) }}">show</a>
                    <a href="{{ path('app_musician_edit', {'id': musician.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_musician_new') }}">Create new</a>
{% endblock %}
