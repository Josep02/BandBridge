{% extends 'base.html.twig' %}

{% block title %}Musician{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Inicio</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{ musician.name }}</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mt-4 mb-5">
            <div class="col-4">
                <div class="p-3 rounded rounded-2 border border-1 border-gray text-center h-100">
                    <img src="{{ asset('images/' ~ musician.image) }}" alt=""
                         width="120"
                         height="120" class="rounded-circle mb-3">

                    <h2>{{ musician.name }}</h2>
                    <h2>{{ musician.lastname }}</h2>

                    <h4 class="bg-black rounded-2 text-white mt-5">{{ musician.instrument.name }}</h4>
                </div>
            </div>
            <div class="col-8">
                <h3>Algunos de sus proximos eventos:</h3>

                <div class="d-flex justify-content-center flex-wrap">
                    {% for event in events %}
                        <div class="card card-2 m-1">
                            <div class="card-body h-100">
                                <div class="text-center align-content-center align-middle">
                                    <img src="{{ asset('images/' ~ event.event.organization.image) }}"
                                         alt="" class="rounded-2 me-3">
                                    <span class="fs-5">{{ event.event.name }}</span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}