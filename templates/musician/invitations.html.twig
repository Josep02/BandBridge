{% extends 'base.html.twig' %}

{% block title %}Mis eventos{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Inicio</a></li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_musician_show', {'id': app.user.id}) }}"> Mi perfil</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Invitaciones</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mt-4 mb-5">
            <div class="col-12">
                <h1>Invitaciones</h1>

                {% if invitations is empty %}
                    <div class="text-center">
                        <p>Actualmente no tienes ninguna invitaci√≥n lo sentimos <i class="fa-solid fa-face-smile-wink"></i>.</p>
                    </div>
                {% else %}
                    <div class="d-flex justify-content-between">
                        {% for invitation in invitations %}
                            <div class="card card-2">
                                <div class="card-body">
                                    <h5 class="card-title">{{ invitation.organization.name }}</h5>
                                    <p class="card-text">{{ invitation.message }}</p>
                                </div>
                                <div class="card-footer p-0">
                                    <div class="text-center d-flex justify-content-between">
                                        <form action="{{ path('app_invitation_reject', {'id': invitation.id}) }}" method="post" class="w-100">
                                            <button type="submit" class="button-back-1 w-100">
                                                <i class="fa-solid fa-xmark"></i>
                                            </button>
                                        </form>
                                        <form action="{{ path('app_invitation_accept', {'id': invitation.id}) }}" method="post" class="w-100">
                                            <button type="submit" class="button-back-3 w-100">
                                                <i class="fa-solid fa-check"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
