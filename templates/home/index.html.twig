                                        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                    </svg>
                                    {{ closedEvent.location }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col-lg-1 col-xl-2"></div>
        </div>

        <div class="row mt-2 mb-3 d-xl-none">
            <div class="col-lg-1 col-xl-2"></div>
            <div class="col-sm-12 col-md-12 col-lg-10 col-xl-8">
                <div class="text-end">
                    <button class="button-2">Ver mas</button>
                </div>
            </div>
            <div class="col-lg-1 col-xl-2"></div>
        </div>


        <div class="mt-5 d-none d-xl-block d-xxl-block mb-4">
            <div class="col-xl-12">
                <h1 class="">Eventos cerrados</h1>
                <div class=" d-flex flex-wrap justify-content-center justify-content-md-center justify-content-lg-between justify-content-xl-between mb-2">
                    {% for closedEvent in closedEvents|slice(0, 3) %}
                        <div class="card card-2 mt-2 mb-2 gray-filter">
                            <div class="d-flex align-items-center">
                                <div class="p-3"><img src="{{ asset('images/' ~ closedEvent.organization.image) }}"
                                                      class="rounded-2" alt="..."></div>
                                <div><p class="card-title ff-2 fs-4 pe-3">{{ closedEvent.name }}</p></div>
                            </div>
                            <div class="card-body pt-0">
                                <p class="card-text">
                                    {% if closedEvent.description|length > 75 %}
                                        {{ closedEvent.description|slice(0, 75) ~ '...' }}
                                    {% else %}
                                        {{ closedEvent.description }}
                                    {% endif %}
                                </p>
                                <p class="card-text ff-2 d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                         fill="currentColor"
                                         class="bi bi-geo-alt" viewBox="0 0 16 16">
                                        <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                                        <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                    </svg>
                                    {{ closedEvent.location }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="text-end">
                    <button class="button-2">Ver mas</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
