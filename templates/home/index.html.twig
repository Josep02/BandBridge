{% extends 'base.html.twig' %}

{% block title %}BandBridge{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div>
                    <h1 class="pt-4">Proximos eventos</h1>
                    <div class="d-flex flex-wrap justify-content-between mb-5">
                        {% for activeEvent in activeEvents|slice(0, 4) %}
                                <div class="card card-1">
                                    <a href="{{ path('app_home_event_show', {id: activeEvent.id}) }}" class="text-decoration-none text-black">
                                    <img src="{{ asset('../assets/images/card.png') }}" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <p class="card-title ff-2 fs-4">{{ activeEvent.name }}</p>
                                        <p class="card-text">
                                            {% if activeEvent.description|length > 80 %}
                                                {{ activeEvent.description|slice(0, 80) ~ '...' }}
                                            {% else %}
                                                {{ activeEvent.description }}
                                            {% endif %}
                                        </p>
                                        <p class="card-text ff-2 d-flex align-items-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                                <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                                                <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                            </svg>
                                            {{ activeEvent.location }}
                                        </p>
                                    </div>
                                    </a>
                                    <div class="card-footer p-0">
                                        <div class="text-center">
                                            <button type="button" class=" w-100 rounded-bottom button-3">Participar</button>
                                        </div>
                                    </div>
                                </div>
                        {% endfor %}
                    </div>
                    <div class="text-center"><a><button class="button-2">Ver mas</button></a></div>
                </div>

                <div>
                    <h1 class="">Eventos cerrados</h1>
                    <div class="d-flex flex-wrap justify-content-between mb-5">
                        {% for closedEvent in closedEvents|slice(0, 4) %}
                            <div class="card card-1">
                                <img src="{{ asset('../assets/images/card.png') }}" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <p class="card-title ff-2 fs-4">{{ closedEvent.name }}</p>
                                    <p class="card-text">
                                        {% if closedEvent.description|length > 80 %}
                                            {{ closedEvent.description|slice(0, 80) ~ '...' }}
                                        {% else %}
                                            {{ closedEvent.description }}
                                        {% endif %}
                                    </p>
                                    <p class="card-text ff-2 d-flex align-items-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                        </svg>
                                        {{ closedEvent.location }}
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="pb-5 text-end"><a><button class="button-2">Ver mas</button></a></div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
{% endblock %}
