{% extends 'base_back.html.twig' %}

{% block body %}
    <div class="rounded-2 bg-white p-3">

        <div class="d-flex flex-wrap justify-content-between">
            <div class="p-3">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0 d-flex justify-content-between">
                            <div class="ms-2 me-5 align-content-center">
                                <i class="fa-solid fa-calendar-days fs-1"></i>
                            </div>
                            <div class="text-end align-content-center">
                                <p class="m-0 fs-3">{{ events_count }}</p>
                                <p class="m-0 text-secondary">Eventos creados</p>
                            </div>
                        </blockquote>
                    </div>
                </div>
            </div>

            <div class="p-3">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0 d-flex justify-content-between">
                            <div class="ms-2 me-5 align-content-center">
                                <i class="fa-regular fa-hand fs-1"></i>
                            </div>
                            <div class="text-end align-content-center">
                                <p class="m-0 fs-3">{{ participation_count }}</p>
                                <p class="m-0 text-secondary">Participaciones totales</p>
                            </div>
                        </blockquote>
                    </div>
                </div>
            </div>

            <div class="p-3">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0 d-flex justify-content-between">
                            <div class="ms-2 me-5 align-content-center">
                                <i class="fa-solid fa-music fs-1"></i>
                            </div>
                            <div class="text-end align-content-center">
                                <p class="m-0 fs-3">254</p>
                                <p class="m-0 text-secondary">Eventos creados</p>
                            </div>
                        </blockquote>
                    </div>
                </div>
            </div>

            <div class="p-3">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0 d-flex justify-content-between">
                            <div class="ms-2 me-5 align-content-center">
                                <i class="fa-solid fa-drum fs-1"></i>
                            </div>
                            <div class="text-end align-content-center">
                                <p class="m-0 fs-3">{{ most_requested_instrument }} - {{ most_requested_instrument_count }} solicitudes</p>
                                <p class="m-0 text-secondary">Instrumento mas requerido actualmente</p>
                            </div>
                        </blockquote>
                    </div>
                </div>
            </div>

            <div class="p-3">
                <div class="card">
                    <div class="card-body">
                        <blockquote class="blockquote mb-0 d-flex justify-content-between">
                            <div class="ms-2 me-5 align-content-center">
                                <i class="fa-regular fa-user fs-1"></i>
                            </div>
                            <div class="text-end align-content-center">
                                <p class="m-0 fs-3">{{ musicians_count }}</p>
                                <p class="m-0 text-secondary">Numero de usuarios registrados</p>
                            </div>
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>

        <div class="p-3">
            <div class="border border-1 border-gray rounded-2 p-3">
                <h3 class="pt-2 pb-3">Instrumentos mas pedidos en eventos</h3>
                <div class="progress mb-2" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success" style="width: 25%">25%</div>
                </div>
                <div class="progress mb-2" role="progressbar" aria-label="Info example" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-info text-dark" style="width: 50%">50%</div>
                </div>
                <div class="progress mb-2" role="progressbar" aria-label="Warning example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-warning text-dark" style="width: 75%">75%</div>
                </div>
                <div class="progress mb-2" role="progressbar" aria-label="Danger example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-danger" style="width: 100%">100%</div>
                </div>
            </div>
        </div>

        <div class="p-3">
            <div class="border border-1 border-gray rounded-2 p-3">
                <div data-controller="chart">
                    <canvas data-chart-target="canvas" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

    </div>
{% endblock %}