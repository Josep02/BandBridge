{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container-fluid bg-5">
        <div class="row">
            <div class="mt-5 col-md-6 offset-md-3 p-5">
                <form action="{{ path('app_login') }}" method="post" novalidate>
                    <div class="form-group">
                        <label for="username" class="text-white">Username:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
                    </div>

                    <div class="form-group pt-3">
                        <label for="password" class="text-white">Password:</label>
                        <input type="text" id="password" name="_password" class="form-control">
                    </div>

                    <div class="pt-4">
                        <button class="button-1" type="submit" name="login">Iniciar sesi√≥n</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}