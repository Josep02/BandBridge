{% extends 'base_back.html.twig' %}

{% block title %}MusicianClass index{% endblock %}

{% block body %}
    <div class="bg-white rounded-2 p-3 h-100">
        <div class="d-flex justify-content-between">
            <h1>Roles de los usuarios</h1>
            <a href="{{ path('app_back_musician_class_new') }}">
                <button class="button-4">Nuevo</button>
            </a>
        </div>

        <div class="d-flex flex-wrap justify-content-center">
                {% for musician_class in musician_classes %}
                    <div class="card card-4 mb-3 m-2">
                           <div class="card-body p-0">
                               <div class="d-flex justify-content-center">
                                   <div class="w-100 p-1 text-center align-content-center">
                                       <div class="">
                                           <img src="{{ asset('images/' ~ musician_class.musician.image ) }}" alt="" width="60" height="60" class="rounded-circle">
                                           <p class="m-0 p-0">{{ musician_class.musician.name }}</p>
                                       </div>
                                   </div>
                                   <div class="w-100 p-0 text-center d-flex justify-content-center align-items-center align-middle">
                                       {{ musician_class.role }}
                                   </div>
                                   <div class="w-100 p-1 text-center align-content-center">
                                       <div class="">
                                           <img src="{{ asset('images/' ~ musician_class.organization.image ) }}" alt="" width="60" height="60" class="rounded-2">
                                           <p class="m-0 p-0">{{ musician_class.organization.name }}</p>
                                       </div>
                                   </div>
                               </div>
                           </div>
                        <div class="card-footer d-flex justify-content-between p-0">
                            <button class="w-100 button-back-1" data-bs-toggle="modal" data-bs-target="#deleteModal{{ musician_class.id }}">
                                <i class="fa fa-trash"></i>
                            </button>
                            <a href="{{ path('app_back_musician_class_edit', {'id': musician_class.id}) }}" class="text-decoration-none text-center w-100 button-back-3">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteModal{{ musician_class.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteModalLabel{{ musician_class.id }}" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="deleteModalLabel{{ musician_class.id }}">Confirmar Eliminación</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    ¿Estás seguro de que deseas eliminar este rol?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <form method="post" action="{{ path('app_back_musician_class_delete', {'id': musician_class.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ musician_class.id) }}">
                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        <div class="navigation d-flex justify-content-center mt-4 mb-5">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}