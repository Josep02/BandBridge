<header>
    <div class="container-fluid">
        <div class="row bg-2">
            <div class="col-md-2 col-xl-2 col-lg-2"></div>
            <div class="col-md-8 p-0">
                <nav class="navbar navbar-dark p-0">
                    <div class="container-fluid d-flex align-items-center justify-content-between">
                        <a class="navbar-brand">
                            <img src="{{ asset('../assets/images/icon.png') }}" alt="Logo" width="35" height="35">
                            BandBridge
                        </a>
                        <div class="d-flex align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="pe-4">
                                    {% if app.user %}
                                        <a href="{{ path('app_logout') }}"><button class="button-1">Cerrar sesión</button></a>
                                    {% else %}
                                        <a href="{{ path('app_login') }}"><button class="button-1">Iniciar sesión</button></a>
                                    {% endif %}
                                </div>
                                <form class="d-flex" role="search">
                                    <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search">
                                    <button class="btn btn-outline-light" type="submit">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-md-2 col-xl-2 col-lg-2"></div>
        </div>
    </div>
</header>

