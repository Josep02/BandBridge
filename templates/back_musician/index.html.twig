{% extends 'base_back.html.twig' %}

{% block title %}BandBridge{% endblock %}

{% block body %}
    <div class="rounded-2 bg-white p-3">

        <h1 class="pb-3">Usuarios registrados</h1>

        <div class="rounded-2 border border-1 border-gray pe-2 ps-2">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Correo Electr√≥nico</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for musician in musicians %}
                        <tr>
                            <td>{{ musician.name }}</td>
                            <td>{{ musician.lastname }}</td>
                            <td>{{ musician.email }}</td>
                            <td class="d-flex justify-content-between">
                                <a href="{{ path('app_back_musician_delete', {'id': musician.id}) }}" class="text-decoration-none btn-back-1 ps-3 pe-3">
                                    <i class="fa fa-trash"></i>
                                </a>
                                <a href="{{ path('app_back_musician_show', {'id': musician.id}) }}" class="text-decoration-none btn-back-2 ps-3 pe-3">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{ path('app_back_musician_edit', {'id': musician.id}) }}" class="text-decoration-none btn-back-3 ps-3 pe-3">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}
