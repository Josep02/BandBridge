{% extends 'base.html.twig' %}

{% block title %}Nuevo evento{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 my-5 d-flex justify-content-center">
                <div class="bg-white mb-5 border border-black border-opacity-25 p-3 rounded-2 d-flex flex-column align-items-center form-container">

                    <h1 class="mb-4">Crear nuevo evento</h1>

                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nombre del evento'}}) }}
                                {{ form_label(form.name, 'Nombre del evento') }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form_widget(form.location, {'attr': {'class': 'form-control', 'placeholder': 'Ubicacion'}}) }}
                                {{ form_label(form.location, 'Ubicacion') }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Fecha'}}) }}
                                {{ form_label(form.date, 'Fecha') }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form_widget(form.state, {'attr': {'class': 'form-control', 'placeholder': 'Estado'}}) }}
                                {{ form_label(form.state, 'Estado') }}
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Descripcion'}}) }}
                        {{ form_label(form.description, 'Descripcion') }}
                    </div>

                    <div id="instruments-container">
                        <div class="row instrument-row mb-3">
                            <div class="col-4">
                                <label for="instruments_0">Instrumento</label>
                                <select id="instruments_0" name="instrument_0" class="form-select">
                                    {% for instrument in instruments %}
                                        <option value="{{ instrument.id }}">{{ instrument.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-4">
                                <label for="min_payment_0">Pago Mínimo</label>
                                <input type="number" step="0.01" id="min_payment_0" name="min_payment_0" class="form-control">
                            </div>
                            <div class="col-4">
                                <label for="quantity_0">Cantidad</label>
                                <input type="number" id="quantity_0" name="quantity_0" class="form-control">
                            </div>
                        </div>
                    </div>

                    <button type="button" id="add-instrument" class="btn btn-secondary mb-3">Añadir Instrumento</button>

                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-primary">Crear evento</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script>
        let instrumentIndex = 1;
        document.getElementById('add-instrument').addEventListener('click', function() {
            const container = document.getElementById('instruments-container');
            const newRow = document.createElement('div');
            newRow.classList.add('row', 'instrument-row', 'mb-3');
            newRow.innerHTML = `
                <div class="col-4">
                    <label for="instruments_${instrumentIndex}">Instrumento</label>
                    <select id="instruments_${instrumentIndex}" name="instrument_${instrumentIndex}" class="form-select">
                        {% for instrument in instruments %}
                            <option value="{{ instrument.id }}">{{ instrument.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-4">
                    <label for="min_payment_${instrumentIndex}">Pago Mínimo</label>
                    <input type="number" step="0.01" id="min_payment_${instrumentIndex}" name="min_payment_${instrumentIndex}" class="form-control">
                </div>
                <div class="col-4">
                    <label for="quantity_${instrumentIndex}">Cantidad</label>
                    <input type="number" id="quantity_${instrumentIndex}" name="quantity_${instrumentIndex}" class="form-control">
                </div>
            `;
            container.appendChild(newRow);
            instrumentIndex++;
        });
    </script>
{% endblock %}
