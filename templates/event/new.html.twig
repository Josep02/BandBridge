{% extends 'base.html.twig' %}

{% block title %}Nuevo evento{% endblock %}

{% block body %}
    <div class="container" data-controller="add-instrument">
        <div class="row mt-5">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Inicio</a></li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_musician_show', {'id': app.user.id}) }}">Mi perfil</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_musician_organizations', {'id': app.user.id}) }}">Mis
                                organizaciones</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_organization_organizer_show', {'id': organization.id}) }}">
                                {{ organization.name }}
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Crear evento</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12 d-flex justify-content-center">
                <div class="bg-white mb-5 border border-black border-opacity-25 p-3 rounded-2 d-flex flex-column align-items-center form-container">

                    <h1 class="mb-4">Crear nuevo evento</h1>

                    {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    <div class="row">
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nombre del evento'}}) }}
                                {{ form_label(form.name, 'Nombre del evento') }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form_widget(form.location, {'attr': {'class': 'form-control', 'placeholder': 'Ubicacion'}}) }}
                                {{ form_label(form.location, 'Ubicacion') }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-floating mb-3">
                                {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Fecha'}}) }}
                                {{ form_label(form.date, 'Fecha') }}
                            </div>
                            <div class="form-floating mb-3">
                                {{ form_widget(form.state, {'attr': {'class': 'form-control', 'placeholder': 'Estado'}}) }}
                                {{ form_label(form.state, 'Estado') }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Descripcion'}}) }}
                                {{ form_label(form.description, 'Descripcion') }}
                            </div>
                        </div>
                    </div>

                    <div id="instruments-container" data-add-instrument-target="container">
                        <div class="row instrument-row mb-3"></div>
                    </div>

                    <button type="button" id="add-instrument" class="btn btn-secondary mb-3" data-action="add-instrument#addInstrument">Añadir Instrumento</button>

                    <div class="text-end mt-3">
                        <button type="submit" class="button-4">Crear evento</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <!-- Template for new instruments -->
        <template data-add-instrument-target="template">
                    <div class="col-4">
                        <label for="instruments___index__">Instrumento</label>
                        <select id="instruments___index__" name="instrument___index__" class="form-select">
                            {% for instrument in instruments %}
                                <option value="{{ instrument.id }}">{{ instrument.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-4">
                        <label for="min_payment___index__">Pago Mínimo</label>
                        <input type="number" step="0.01" id="min_payment___index__" name="min_payment___index__" class="form-control">
                    </div>
                    <div class="col-4">
                        <label for="quantity___index__">Cantidad</label>
                        <input type="number" id="quantity___index__" name="quantity___index__" class="form-control">
                    </div>
        </template>
    </div>
{% endblock %}
